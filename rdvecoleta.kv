#import colors kivymd.theming.ThemeManager.colors
<MDRaisedButton>:
    # md_bg_color: 0, 0, 1, 1
    elevation_normal: 6
    font_size: 30

<MDFillRoundFlatButton>:
    font_size: 30
    
    md_bg_color: 0.012, 0.988, 0.906, 1

<TelaColeta>:
    MDFloatLayout:
        radius: [25, 0, 0, 0]
                
        MDLabel:
            pos_hint: {"y": 0.4, 'x': 0.32}
            text: "RDVE Modulo de Coleta"          
            font_size: 30
        
        MDRaisedButton:
            pos_hint: {'x':0.08, 'top':0.5}
            text: "Alistamento eleitoral"
            on_press: root.manager.current = 'TelaAlistamento'

        MDRaisedButton:
            pos_hint: {'x':0.5, 'top':0.5}
            text: "Registro de Candidatura"
            on_press: root.manager.current = 'TelaCandidatura'
        
        MDRaisedButton:
            pos_hint: {'x':0.35, 'top':0.4}
            text: "MÃ³dulo Urna"
            on_press: root.manager.current = 'TelaUrna'

<TelaUrna>:
    MDGridLayout:
        size: root.size
        cols: 2
        rows: 2
                
        height: root.height
        width: root.width
        MDBoxLayout:
            # width: root.width/4
            size_hint_x: 0.7
            padding: [10,10]
            spacing: [10,10]
        
            MDTextField:
                # pos_hint: {'x': 0.5, 'y': .8}
                hint_text: "Nome do eleitor"
                mode: "rectangle"
                helper_text: "Digite aqui o nome do eleitor"                    
            
        MDGridLayout:
            
            height: root.height
            width: root.width*0.6

            MDGridLayout:
                # pos_hint: {'x': .6}
                cols: 3
                padding: [10,10]
                spacing: [10,10]            
                MDFillRoundFlatButton:
                    text: '1'
                    text_color: 0, 0, 1, 1    
                MDFillRoundFlatButton:
                    text: '2'
                    text_color: 0, 0, 1, 1  
                MDFillRoundFlatButton:
                    text: '3'
                    text_color: 0, 0, 1, 1  
                MDFillRoundFlatButton:
                    text: '4'
                    text_color: 0, 0, 1, 1  
                MDFillRoundFlatButton:
                    text: '5'
                    text_color: 0, 0, 1, 1  
                MDFillRoundFlatButton:
                    text: '6'
                    text_color: 0, 0, 1, 1  
                MDFillRoundFlatButton:
                    text: '7'
                    text_color: 0, 0, 1, 1  
                MDFillRoundFlatButton:
                    text: '8'
                    text_color: 0, 0, 1, 1  
                MDFillRoundFlatButton:
                    text: '9'
                    text_color: 0, 0, 1, 1  
                MDFillRoundFlatButton:
                    text: ''
                    
                MDFillRoundFlatButton:
                    text: '0'
                    text_color: 0, 0, 1, 1  
                MDFillRoundFlatButton:
                    text: ''                        
                MDFillRoundFlatButton:
                    text: 'Confirma'
                MDFillRoundFlatButton:
                    text: 'Corrige'
            
                MDFillRoundFlatButton:
                    text: 'Branco'
            


<TelaAlistamento>:    
    nEleitor: nEleitor
    on_enter: root.iniciar()
    MDFloatLayout:    
        radius: [25, 0, 0, 0]        
        MDTextField:
            id: nEleitor
            pos_hint: {'y': 0.6 }
            hint_text: "Nome do eleitor"
            mode: "rectangle"
            helper_text: "Digite aqui o nome do eleitor"
            
        MDRaisedButton:
            pos_hint: {'y': 0.4, 'x': 0.6}
            text: "Confirmar registro"
            on_press: root.novoEleitor()
        MDRaisedButton:
            pos_hint: {'y': 0.3, 'x': 0.6}
            text: "Voltar"
            on_press: root.manager.current = 'TelaInicial'

<TelaCandidatura>:    
    nCandidato: nCandidato
    numCandidato: numCandidato
    on_enter: root.iniciar()

    MDFloatLayout:    
        radius: [25, 0, 0, 0]        
        MDTextField:
            id: nCandidato
            pos_hint: {'y': 0.6}
            hint_text: "Apelido do candidato"
            mode: "rectangle"
        MDTextField:
            id: numCandidato
            pos_hint: {'y': 0.5}
            hint_text: "Numero do candidato"
            mode: "rectangle"
        MDRaisedButton:
            pos_hint: {'y': 0.4, 'x': 0.6}
            text: "Confirmar registro"
            on_press: root.novoCandidato()
        MDRaisedButton:
            pos_hint: {'y': 0.3, 'x': 0.6}
            text: "Voltar"
            on_press: root.manager.current = 'TelaInicial'
