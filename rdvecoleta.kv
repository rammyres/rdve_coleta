#:import ZBarSymbol pyzbar.pyzbar.ZBarSymbol
#:import QRCodeWidget kivy_garden.qrcode

<MDRaisedButton>:
    md_bg_color: 0, 0, 1, 1
    elevation_normal: 6
    font_size: 30

<TelaColeta>:
    FloatLayout:
        
        MDLabel:
            pos_hint: {"y": 0.4, 'x': 0.32}
            text: "RDVE Modulo de Coleta"          
            font_size: 30
        
        MDRaisedButton:
            pos_hint: {'x':0.08, 'top':0.5}
            text: "Alistamento eleitoral"
            on_press: root.manager.current = 'TesteLeitor'

        MDRaisedButton:
            pos_hint: {'x':0.5, 'top':0.5}
            text: "Registro de Candidatura"
            on_press: root.manager.current = 'TelaQREleitor'
        
        MDRaisedButton:
            pos_hint: {'x':0.35, 'top':0.4}
            text: "MÃ³dulo Urna"
            on_press: root.manager.current = 'TelaUrna'

<TelaUrna>:
    MDGridLayout:
        cols: 2
        adaptive_size: True
        md_bg_color: app.theme_cls.primary_color
        MDBoxLayout:
            pos_hint: {'x':0.2}
            MDRaisedButton:
                text: '1'
            MDRaisedButton:
                text: '2'
            MDRaisedButton:
                text: '3'
        MDBoxLayout:

            pos_hint: {'x':0.5}
            MDRaisedButton:
                text: 'Confirma'
            MDRaisedButton:
                text: 'Corrige'
        
            MDRaisedButton:
                text: 'Branco'

<TelaQREleitor>:
    FloatLayout:
        ZBarCam:
            pos_hint:{'x':0.5, 'y': 0.5}
            id: zbarcam
            # optional, by default checks all types
            code_types: ZBarSymbol.QRCODE, ZBarSymbol.EAN13

