
#:import from_hex kivy.utils.get_color_from_hex
#:import colors kivymd.color_definitions.colors
<MDRaisedButton>:
    # md_bg_color: 0, 0, 1, 1
    elevation_normal: 6
    font_size: 30

<MDFillRoundFlatButton>:
    font_size: 30
    size_hint: None, None
    height: 70
    # md_bg_color: 0.012, 0.988, 0.906, 1
    md_bg_color: from_hex(colors['LightBlue']['500'])

<TelaColeta>:
    MDFloatLayout:
        radius: [25, 0, 0, 0]
                
        MDLabel:
            pos_hint: {"y": 0.4, 'x': 0.32}
            text: "RDVE Modulo de Coleta"          
            font_size: 30
        
        MDFillRoundFlatButton:
            pos_hint: {'x':0.08, 'top':0.5}
            text: "Alistamento eleitoral"
            on_press: root.manager.current = 'TelaAlistamento'

        MDFillRoundFlatButton:
            pos_hint: {'x':0.5, 'top':0.5}
            text: "Registro de Candidatura"
            on_press: root.manager.current = 'TelaCandidatura'
        
        MDFillRoundFlatButton:
            pos_hint: {'x':0.35, 'top':0.35}
            text: "MÃ³dulo Urna"
            # on_press: root.manager.current = 'TelaUrna'
            on_press: root.manager.current = 'TelaSeletor'

<TelaSeletor>:
    on_enter: root.iniciar()

<TelaUrna>:
    numCandidato:numCandidato 
    MDGridLayout:
        size: root.size
        cols: 2
        rows: 2
                
        # height: root.height
        # width: root.width
        MDFloatLayout:
            size_hint_x: 0.5
            padding: [10,10]
            spacing: [10,10]
            MDCard:
                size_hint: None, None
                size: "280dp", "180dp"
                pos_hint: {"center_x": .5, "center_y": .5}
                MDLabel:
                    text: "Nome e numero do candidato"
                    font_size: 30
            MDFillRoundFlatButton:
                text: 'Voltar'
                pos_hint: {"center_x": .5, "center_y": .1}
                on_press: root.manager.current = 'TelaInicial'
                
        MDGridLayout:  
            cols: 1
            size_hint: None, None
            height: root.height
            width: root.width*0.55
            pos_hint: {"center_x": 0.5}
            MDTextField:
                id: numCandidato
                size_hint: (None, None)
                width: root.width/2
                max_text_length: 5
                hint_text: "Numero do candidato"
                mode: "rectangle"
                helper_text: "Digite o numero do candidato" 
                on_text: root.ao_editar()
    
            MDGridLayout:
                cols: 3
                padding: [10,10]
                spacing: [10,10]            
                MDFillRoundFlatButton:
                    text: '1'
                    
                    on_press: root.ao_tocar(self.text)
                MDFillRoundFlatButton:
                    text: '2'
                    
                    on_press: root.ao_tocar(self.text)
                MDFillRoundFlatButton:
                    text: '3'
                    
                    on_press: root.ao_tocar(self.text)
                MDFillRoundFlatButton:
                    text: '4'
                    
                    on_press: root.ao_tocar(self.text)
                MDFillRoundFlatButton:
                    text: '5'
                    
                    on_press: root.ao_tocar(self.text)
                MDFillRoundFlatButton:
                    text: '6'
                    
                    on_press: root.ao_tocar(self.text)
                MDFillRoundFlatButton:
                    text: '7'
                    
                    on_press: root.ao_tocar(self.text)
                MDFillRoundFlatButton:
                    text: '8'
                    
                    on_press: root.ao_tocar(self.text)
                MDFillRoundFlatButton:
                    text: '9'
                    
                    on_press: root.ao_tocar(self.text)
                MDFillRoundFlatButton:
                    text: ''
                MDFillRoundFlatButton:
                    text: '0'                    
                    on_press: root.ao_tocar(self.text)
                MDFillRoundFlatButton:
                    text: ''                        
                
                MDFillRoundFlatButton:
                    text: 'Branco'
                    text_color: 1, 1, 1, 1
                    on_press: root.ao_tocar("00")
                MDFillRoundFlatButton:
                    text: 'Corrige'
                    text_color: from_hex(colors["Orange"]["A100"])
                    on_press: root.corrige()
                MDFillRoundFlatButton:
                    text: 'Confirma'

                    text_color: from_hex(colors["Lime"]["A200"])
        


<TelaAlistamento>:    
    nEleitor: nEleitor
    on_enter: root.iniciar()
    MDFloatLayout:    
        radius: [25, 0, 0, 0]        
        MDTextField:
            id: nEleitor
            pos_hint: {'y': 0.6 }
            hint_text: "Nome do eleitor"
            mode: "rectangle"
            helper_text: "Digite aqui o nome do eleitor"
        MDFillRoundFlatButton:
            pos_hint: {'y': 0.4, 'x': 0.6}
            text: "Confirmar registro"
            on_press: root.novoEleitor()
        MDFillRoundFlatButton:
            pos_hint: {'y': 0.26, 'x': 0.6}
            text: "Voltar"
            on_press: root.manager.current = 'TelaInicial'

<TelaCandidatura>:    
    nCandidato: nCandidato
    numCandidato: numCandidato
    on_enter: root.iniciar()

    MDFloatLayout:    
        radius: [25, 0, 0, 0]        
        MDTextField:
            id: nCandidato
            pos_hint: {'y': 0.6}
            hint_text: "Apelido do candidato"
            mode: "rectangle"
        MDTextField:
            id: numCandidato
            pos_hint: {'y': 0.5}
            hint_text: "Numero do candidato"
            mode: "rectangle"
        MDFillRoundFlatButton:
            pos_hint: {'y': 0.35, 'x': 0.6}
            text: "Confirmar registro"
            on_press: root.novoCandidato()
        MDFillRoundFlatButton:
            pos_hint: {'y': 0.20, 'x': 0.6}
            text: "Voltar"
            on_press: root.manager.current = 'TelaInicial'
